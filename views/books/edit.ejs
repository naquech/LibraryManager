<% include ../partials/header %>

    <link href="/css/edit.css" rel="stylesheet">
    
    <div class="container">
        
        <h2>Edit "<%=book.title%>"</h2>
        
        <form action="/books/<%= book._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="book[title]" value="<%=book.title%>">
            </div>
            <div class="form-group">
                <label>Author</label>
                <input class="form-control" type="text" name="book[author]" value="<%=book.author%>">
            </div>
            <div class="form-group">
                <label>Format</label><br>
                <%=book.format%>
                <select class="custom-select" name="book[format]">
                    <option value="Audio">Audiobook</option>
                    <option value="Kindle">Kindle</option>
                    <option value="Print">Print</option>
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a class="btn btn-secondary" href="/books/<%= book._id %>"> Cancel </a>
        </form>
    </div>
    
<% include ../partials/footer %> 